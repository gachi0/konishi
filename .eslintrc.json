{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "no-irregular-whitespace": [
            "error",
            {
                "skipTemplates": true
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}